# helper script to crawl drives and rebuild index with ez command    

cd ~/mpcfill/MPCAutofill

if [[ "$1" == "" ]]
  then
    # echo "No arguments supplied"
    ~/mpcfill/venv/bin/python ~/mpcfill/MPCAutofill/manage.py update_database
  else
    # echo "Argument $1"
    ~/mpcfill/venv/bin/python ~/mpcfill/MPCAutofill/manage.py update_database -d $1
fi
